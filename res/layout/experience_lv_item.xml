<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/addr_lv_item_startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="2015.08"
                android:textColor="#101119"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#101119"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/addr_lv_item_endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="2015.11"
                android:textColor="#101119"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/addr_lv_item_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:ems="17"
                android:singleLine="true"
                android:text="(1年3个月)"
                android:textColor="#101119"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/addr_lv_item_Employer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:ems="17"
            android:singleLine="true"
            android:text="吉林省优格信息科技吉林省优格信息科技吉林省优格信息科技吉林省优格信息科技吉林省优格信息科技"
            android:textColor="#101119"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="职位名称："
                android:textColor="#515151"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/addr_lv_item_obligation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:ems="17"
                android:singleLine="true"
                android:text="广告策划"
                android:textColor="#515151"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addr_lv_item_fix"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical|right"
        android:gravity="center|right" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pen" />
    </LinearLayout>

</FrameLayout>