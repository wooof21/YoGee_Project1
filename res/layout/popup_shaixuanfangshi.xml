<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iiiiiiii"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/xs_on_off_line" />

            <TextView
                android:id="@+id/xs_on_off_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iiiiiiii"
                android:gravity="center"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:text="完成方式"
                android:textColor="#515151"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/xs_all"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_green_one"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="7dp"
                    android:text="全选"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/xs_online"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_green_center_two"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="7dp"
                    android:text="线上"
                    android:textColor="#22b570"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/xs_offline"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_green_stroke_two"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="7dp"
                    android:text="线下"
                    android:textColor="#22b570"
                    android:textSize="11sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- divider -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/dash_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iiiiiiiii"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/xs_order_type" />

            <TextView
                android:id="@+id/xs_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iiiiiiiii"
                android:gravity="center"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:text="订单类型"
                android:textColor="#515151"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/xs_type_all"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_green_one"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="7dp"
                    android:text="全选"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/xs_type_grab"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_green_center_two"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="7dp"
                    android:text="抢单"
                    android:textColor="#22b570"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/xs_type_price"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_green_stroke_two"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="7dp"
                    android:text="报价"
                    android:textColor="#22b570"
                    android:textSize="11sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- divider -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/dash_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iiiiiiiiiis"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/xs_order_distance" />

            <TextView
                android:id="@+id/xs_order_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iiiiiiiiiis"
                android:gravity="center"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:text="订单距离"
                android:textColor="#515151"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/xs_distance_three"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_green_one"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="7dp"
                    android:text="3公里"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/xs_distance_five"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_green_center_two"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="7dp"
                    android:text="5公里"
                    android:textColor="#22b570"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/xs_distance_ten"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_green_stroke_two"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="7dp"
                    android:text="10公里"
                    android:textColor="#22b570"
                    android:textSize="11sp" />
            </LinearLayout>
        </RelativeLayout>
        <!-- divider -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/dash_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iiiiiiiiii"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/xz_overtime" />

            <TextView
                android:id="@+id/xs_over_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iiiiiiiiii"
                android:gravity="center"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:text="超时赔付"
                android:textColor="#515151"
                android:textSize="15sp" />

            <ToggleButton
                android:id="@+id/xs_overtime"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/switch_btn"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <!-- divider -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/dash_grey"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iiiiiiiiiii"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/xs_pay_online" />

            <TextView
                android:id="@+id/xs_pay_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iiiiiiiiiii"
                android:gravity="center"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:text="在线支付"
                android:textColor="#515151"
                android:textSize="13sp" />

            <ToggleButton
                android:id="@+id/xs_online_pay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/switch_btn"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/dash_grey"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/xs_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="标签"
                    android:textColor="#101119"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="全选"
                    android:textColor="#515151"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/xs_label_cb"
                    style="@style/circlecheckboxsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/xs_zhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zhu_grey" />

                <ImageView
                    android:id="@+id/xs_xiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/xiu_grey" />

                <ImageView
                    android:id="@+id/xs_zhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/zhi_grey" />

                <ImageView
                    android:id="@+id/xs_che"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/che_grey" />

                <ImageView
                    android:id="@+id/xs_song"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/song_grey" />

                <ImageView
                    android:id="@+id/xs_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/jia_grey" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/xs_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/corner_grey_stroke"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="取消"
                android:textColor="#101119"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/xs_commit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="15dp"
                android:layout_weight="2"
                android:background="@drawable/corner_green"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#eeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="#d1d1d1" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="#d1d1d1" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>