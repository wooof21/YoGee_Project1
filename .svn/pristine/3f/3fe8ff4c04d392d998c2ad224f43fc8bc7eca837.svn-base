<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" 
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22b570" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="技能证书"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text="保存 "
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:visibility="visible" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/skill_certification_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/skill_certification_item_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp" >

                    <EditText
                        android:id="@+id/skill_certification_item_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="15"
                        android:hint="填写证书名称(限12字)"
                        android:maxLength="12"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/skill_certification_item_delete1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/delete" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/skill_certification_item_pic1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera_resume" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/skill_certification_item_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp" >

                    <EditText
                        android:id="@+id/skill_certification_item_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="15"
                        android:hint="填写证书名称(限12字)"
                        android:maxLength="12"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/skill_certification_item_delete2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/delete" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/skill_certification_item_pic2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera_resume" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/skill_certification_item_view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp" >

                    <EditText
                        android:id="@+id/skill_certification_item_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="15"
                        android:hint="填写证书名称(限12字)"
                        android:maxLength="12"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/skill_certification_item_delete3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/delete" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/skill_certification_item_pic3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera_resume" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/skill_certification_item_view4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp" >

                    <EditText
                        android:id="@+id/skill_certification_item_title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="15"
                        android:hint="填写证书名称(限12字)"
                        android:maxLength="12"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/skill_certification_item_delete4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/delete" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/skill_certification_item_pic4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera_resume" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/skill_certification_item_view5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp" >

                    <EditText
                        android:id="@+id/skill_certification_item_title5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="15"
                        android:hint="填写证书名称(限12字)"
                        android:maxLength="12"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/skill_certification_item_delete5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/delete" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/skill_certification_item_pic5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera_resume" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee" />
            </LinearLayout>

            <ImageView
                android:id="@+id/skill_certification_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/add_grey" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>