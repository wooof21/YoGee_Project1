<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_choose_emploee_selected_hsv"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/order_choose_emploee_selected_conent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <view.RoundImageView
                    android:id="@+id/order_choose_employee_select_head"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/default_head" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_choose_employee_select_name"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center_horizontal"
                        android:textColor="#101119"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/order_choose_employee_select_resume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="查看简历"
                        android:layout_gravity="center_vertical|right"
                        android:textColor="#08c0c2"
                        android:textSize="13sp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="出价 ￥"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/order_choose_employee_select_price"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:text=""
                    android:textColor="#ff0033"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/order_choose_employee_select_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/corner_grey"
                    android:paddingBottom="4dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingTop="4dp"
                    android:text="已选择"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_action"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
                android:background="@drawable/square_red" >

            <TextView
                android:id="@+id/order_choose_employee_select_delete"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="删除"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</HorizontalScrollView>