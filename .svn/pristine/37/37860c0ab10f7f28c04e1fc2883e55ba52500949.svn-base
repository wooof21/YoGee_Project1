<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:layout_gravity="center_vertical" >

        <view.RoundImageView
            android:id="@+id/order_inprocess_sel_item_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/default_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/order_inprocess_sel_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奥巴马"
                    android:textColor="#101119"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/order_inprocess_sel_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="出价￥2000.00"
                    android:textColor="#6c6c6c"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/order_inprocess_sel_item_status_pic"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/order_status_leaving_grey" />

                <TextView
                    android:id="@+id/order_inprocess_sel_item_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="已选择"
                    android:textColor="#6c6c6c"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/order_inprocess_sel_item_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="15dp"
        android:background="@drawable/corner_green"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="确认"
        android:textColor="#ffffff"
        android:textSize="16sp" />
    </FrameLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        />
    
    <LinearLayout 
        android:id="@+id/order_inprocess_sel_item_trace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_gcoding"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看抢单人实时定位"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:textColor="#6c6c6c"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

</LinearLayout>