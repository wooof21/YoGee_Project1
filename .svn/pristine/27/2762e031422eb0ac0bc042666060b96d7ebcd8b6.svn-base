<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="4"
	    android:orientation="horizontal"
	    android:paddingBottom="8dp"
	    android:paddingTop="8dp" >

	    <LinearLayout 
	        android:id="@+id/bottom_frag_main_ll"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        >
	        
	        <ImageView 
	            android:id="@+id/bottom_frag_main_iv"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/main_green"
	            android:layout_gravity="center_horizontal"
	            />
	        <TextView 
	            android:id="@+id/bottom_frag_main_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="首页"
	            android:textSize="11sp"
	            android:layout_gravity="center_horizontal"
	            android:textColor="#22b570"
	            android:layout_marginTop="3dp"
	            />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/bottom_frag_order_ll"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        >
	        
	        <ImageView 
	            android:id="@+id/bottom_frag_order_iv"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/order_grey"
	            android:layout_gravity="center_horizontal"
	            />
	        <TextView 
	            android:id="@+id/bottom_frag_order_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="订单"
	            android:textSize="11sp"
	            android:layout_gravity="center_horizontal"
	            android:textColor="#515151"
	            android:layout_marginTop="3dp"
	            />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/bottom_frag_discover_ll"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        >
	        
	        <ImageView 
	            android:id="@+id/bottom_frag_discover_iv"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/discover_grey"
	            android:layout_gravity="center_horizontal"
	            />
	        <TextView 
	            android:id="@+id/bottom_frag_discover_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="发现"
	            android:textSize="11sp"
	            android:layout_gravity="center_horizontal"
	            android:textColor="#515151"
	            android:layout_marginTop="3dp"
	            />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/bottom_frag_pcenter_ll"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        >
	        
	        <ImageView 
	            android:id="@+id/bottom_frag_pcenter_iv"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/pcenter_grey"
	            android:layout_gravity="center_horizontal"
	            />
	        <TextView 
	            android:id="@+id/bottom_frag_pcenter_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="我的"
	            android:textSize="11sp"
	            android:layout_gravity="center_horizontal"
	            android:textColor="#515151"
	            android:layout_marginTop="3dp"
	            />
	    </LinearLayout>
	    
	</LinearLayout>
</LinearLayout>
