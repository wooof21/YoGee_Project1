<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_order_list_detail_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:fitsSystemWindows="true" >

    <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22b570" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="订单详情"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text="取消订单"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/new_order_list_detail_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/new_order_list_detail_bottom_two_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2.01" >

            <TextView
                android:id="@+id/new_order_list_detail_bottom_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/corner_green"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="催单"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01"
                android:background="#eeeeee"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

            <TextView
                android:id="@+id/new_order_list_detail_bottom_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/corner_green"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="完成"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/new_order_list_detail_bottom_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/corner_green"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="确认"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:visibility="gone" />

        <view.MarqueeTV
            android:id="@+id/new_order_list_detail_bottom_adtv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="滚啊滚啊滚啊滚啊滚啊滚啊滚啊滚啊滚啊滚啊滚啊滚啊"
            android:textColor="#6c6c6c"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/new_order_list_detail_bottom_grab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/corner_green"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="抢单"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/new_order_list_detail_bottom_bidlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="4.5" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3.5"
                android:orientation="horizontal" >

                <view.RoundImageView
                    android:id="@+id/new_order_list_detail_bottom_bidlist_iv1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/default_head"
                    android:visibility="visible" />

                <view.RoundImageView
                    android:id="@+id/new_order_list_detail_bottom_bidlist_iv2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/default_head"
                    android:visibility="gone" />

                <view.RoundImageView
                    android:id="@+id/new_order_list_detail_bottom_bidlist_iv3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/default_head"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/new_order_list_detail_bottom_bidlist_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#444444"
                    android:textSize="12sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/new_order_list_detail_bottom_bid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/corner_green"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="报价"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_order_list_detail_bottom_mybid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:orientation="horizontal" >

                <view.RoundImageView
                    android:id="@+id/new_order_list_detail_bottom_mybid_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/default_head" />

                <TextView
                    android:id="@+id/new_order_list_detail_bottom_mybid_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="我出价4500元"
                    android:textColor="#ff6530"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/new_order_list_detail_bottom_mybid_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="&lt;您已被选中>"
                    android:textColor="#22b570"
                    android:textSize="13sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8" >

                <TextView
                    android:id="@+id/new_order_list_detail_bottom_mybid_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/corner_orange_stroke"
                    android:padding="6dp"
                    android:text="取消报价"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/new_order_list_detail_bottom_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/title"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- 顶部状态导航 我的抢单 -->

            <LinearLayout
                android:id="@+id/new_order_list_detail_grabtop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5.5" >

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5" >

                        <ImageView
                            android:id="@+id/new_order_list_detail_leaving"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical|right"
                            android:src="@drawable/order_status_leaving" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/new_order_list_detail_line1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_grey" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5" >

                        <ImageView
                            android:id="@+id/new_order_list_detail_onroad"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/order_status_onroad_grey" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/new_order_list_detail_line2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_grey" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5" >

                        <ImageView
                            android:id="@+id/new_order_list_detail_finish"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical|left"
                            android:src="@drawable/order_status_finish_grey" />
                    </FrameLayout>
                </LinearLayout>

                <!-- 文字 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:weightSum="5.5" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical|right"
                        android:text="我出发啦"
                        android:textColor="#101119"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:text="正在途中"
                        android:textColor="#101119"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="5dp"
                        android:text="已完成"
                        android:textColor="#101119"
                        android:textSize="9sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/new_order_list_detail_grabtop_clickable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="点击可以改变订单状态"
                    android:textSize="8sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 顶部状态导航 我的发单 -->

            <LinearLayout
                android:id="@+id/new_order_list_detail_posttop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6.2" >

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/new_order_list_detail_posttop_submit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical|right"
                            android:src="@drawable/order_status_submit" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/new_order_list_detail_posttop_line1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_green" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6" >

                        <ImageView
                            android:id="@+id/new_order_list_detail_posttop_pay"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/order_status_pay_grey" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/new_order_list_detail_posttop_line2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_grey" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6" >

                        <ImageView
                            android:id="@+id/new_order_list_detail_posttop_inprocess"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/order_status_inprocess_grey" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/new_order_list_detail_posttop_line3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_grey" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/new_order_list_detail_posttop_done"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical|left"
                            android:src="@drawable/order_status_done_grey" />
                    </FrameLayout>
                </LinearLayout>
                <!-- horizontal linearlayout end -->


                <!-- 文字 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:weightSum="4" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="7dp"
                        android:text="订单已提交"
                        android:textColor="#101119"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="4dp"
                        android:text="订单已支付"
                        android:textColor="#101119"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="正在进行"
                        android:textColor="#101119"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="7dp"
                        android:text="订单已完成"
                        android:textColor="#101119"
                        android:textSize="8sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 订单已取消 -->

            <TextView
                android:id="@+id/new_order_list_detail_cancel_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="此订单已取消"
                android:textColor="#515151"
                android:textSize="15sp"
                android:visibility="gone" />

            <include
                android:id="@+id/new_order_list_detail_include"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="10dp"
                layout="@layout/order_detail_list_include"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/new_order_list_detail_eventrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="#ffffff"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iviviviviviviviviviviv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/right_arrow" />

                <LinearLayout
                    android:id="@+id/new_order_list_detail_eventll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iviviviviviviviviviviv"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/price"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/new_order_list_detail_event_img"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/now_event" />

                    <view.UpMarqueeImageView
                        android:id="@+id/new_order_list_detail_headline_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/year" />

                    <view.UpMarqueeTextView
                        android:id="@+id/new_order_list_detail_headline_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="活动"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/new_order_list_detail_counttotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/new_order_list_detail_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="0人报价"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/total_need" />

                    <TextView
                        android:id="@+id/new_order_list_detail_totalneed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="总需1人"
                        android:textColor="#ff3737"
                        android:textSize="14sp" />
                </LinearLayout>
            </FrameLayout>

            <ListView
                android:id="@+id/new_order_list_detail_total_sel_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:divider="#eeeeee"
                android:dividerHeight="1dp"
                android:visibility="gone" >
            </ListView>

            <ListView
                android:id="@+id/new_order_list_detail_total_tochoose_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:divider="#eeeeee"
                android:dividerHeight="1dp"
                android:visibility="gone" >
            </ListView>

            <ListView
                android:id="@+id/new_order_list_detail_total_commit_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:divider="#eeeeee"
                android:dividerHeight="1dp"
                android:visibility="gone" >
            </ListView>

            <TextView
                android:id="@+id/new_order_list_detail_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="right"
                android:paddingBottom="6dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:text=""
                android:textColor="#101119"
                android:textSize="14sp"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/order_list_detail_who_tocomfirm_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:padding="5dp"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal" >

                    <view.RoundImageView
                        android:id="@+id/order_list_detail_who_tocomfirm_head"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_head" />

                    <TextView
                        android:id="@+id/order_list_detail_who_tocomfirm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="#101119"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/order_list_detail_who_tocomfirm_checkresume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="查看简历"
                        android:textColor="#2d90ff"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/order_list_detail_who_tocomfirm_comfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/corner_yellow"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:text="确认"
                        android:textColor="#101119"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/order_list_detail_who_tocomfirm_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner_red"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:text="取消"
                        android:textColor="#101119"
                        android:textSize="12sp" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/order_list_detail_who"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" >

                    <view.RoundImageView
                        android:id="@+id/order_list_detail_who_head"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_head" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/order_list_detail_who_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#444444"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/order_list_detail_who_sex"
                                android:layout_width="10dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/famale" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/order_list_detail_who_phonepic"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/phone_big_color" />

                            <TextView
                                android:id="@+id/order_list_detail_who_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="13012345678"
                                android:textColor="#444444"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/new_order_list_detail_employer_identify_pic"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/renzheng" />

                        <TextView
                            android:id="@+id/new_order_list_detail_employer_identify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="已实名认证"
                            android:textColor="#22b570"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/new_order_list_detail_who_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/new_order_list_detail_who_status_pic"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/order_status_leaving_grey" />

                        <TextView
                            android:id="@+id/new_order_list_detail_who_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="已选择"
                            android:textColor="#444444"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/new_order_list_detail_trace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_gcoding" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="查看抢单人实时定位"
                        android:textColor="#6c6c6c"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/new_order_list_detail_cancelorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/corner_orange_stroke"
                android:padding="5dp"
                android:text="取消发单"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/new_order_list_detail_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/employeer_comment" />

                    <TextView
                        android:id="@+id/new_order_list_detail_comment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="雇主对您的评价:"
                        android:textColor="#22b570"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/new_order_list_detail_comment_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="10dp"
                        android:text="2012-12-21"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee" />

                <TextView
                    android:id="@+id/new_order_list_detail_uncomment"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="20dp"
                    android:text="待评价..."
                    android:textColor="#101119"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/new_order_list_detail_commentdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/new_order_list_detail_commentdetail_grade"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/comment_good" />

                        <TextView
                            android:id="@+id/new_order_list_detail_commentdetail_text"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="完成速度"
                                android:textColor="#a1a1a1"
                                android:textSize="11sp" />

                            <RatingBar
                                android:id="@+id/new_order_list_detail_commentdetail_rb1"
                                style="@style/myRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:isIndicator="true"
                                android:max="5"
                                android:numStars="5"
                                android:stepSize="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="完成质量"
                                android:textColor="#a1a1a1"
                                android:textSize="11sp" />

                            <RatingBar
                                android:id="@+id/new_order_list_detail_commentdetail_rb2"
                                style="@style/myRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:isIndicator="true"
                                android:max="5"
                                android:numStars="5"
                                android:stepSize="1" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/new_order_list_detail_commentdetail_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:lineSpacingExtra="5dp"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>